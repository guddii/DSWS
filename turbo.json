{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env"],
  "globalEnv": [
    "NEXT_PUBLIC_CITIZEN_APP_URL",
    "NEXT_PUBLIC_TAX_OFFICE_APP_URL",
    "NEXT_PUBLIC_LAND_REGISTRY_OFFICE_APP_URL"
  ],
  "pipeline": {
    "build": {
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "public/dist/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "dotEnv": [".env.test.local", ".env.test", ".env"],
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "dotEnv": [
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "start": {}
  }
}
